{{ form_start(form, {'attr': {'class': 'container-fluid form-group',
						 'novalidate': 'novalidate'
						} 
}) }}
{{ form_errors(form) }}
    <div class="row align-items-center mb-1"> 
		<div class="col-lg col-md-2 col-sm-6">
			{{ form_label(form.name) }}
			{{ form_widget(form.name, { 'id': '', 'attr': { 'class' : 'form-control form-control-sm' } }) }}
			{{ form_errors(form.name) }}
		</div>
		<div class="col-lg col-md-2 col-sm-6">
			{{ form_label(form.nameEu) }}
			{{ form_widget(form.nameEu, { 'id': '', 'attr': { 'class' : 'form-control form-control-sm' } }) }}
			{{ form_errors(form.nameEu) }}
		</div>
		<div class="col-lg col-md-2 col-sm-6">
			{{ form_label(form.concept) }}
			{{ form_widget(form.concept, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm' } }) }}
		</div>
    </div>
	 <div class="row">
		{% if readonly == false %}
			<div class="col-lg-auto">
				{{ form_widget(form.save, { 'attr': { 'class' : 'btn btn-primary ml-1' } }) }}
			</div>
		{% endif %}
		<div class="col-lg-auto">
			<a href="{{ returnUrl is defined and not returnUrl is empty ? returnUrl : path('admin_payments_index') }}" class="btn btn-secondary">{{ 'btn.cancel' | trans }}</a>
		</div>	
	</div>
{{ form_end(form, {'attr': {'class': '',
			       } 
}) }}
