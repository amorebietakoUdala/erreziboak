{% extends 'base.html.twig' %}

{% block title %}{{'title.debts.search' | trans}}{% endblock %}

{% block body %}
    <main class="container-fluid">

      <div class="mt-1">
         {{ include('debts_files/_searchForm.html.twig') }}
      </div>

		<div class="container-fluid">
			{% if debt is defined and debt|length > 0 %}
			<table id="taula" class="table bootstrap-table mt-3">
			<thead>
				<tr>
               <th data-sortable="true">{{"debts.idNumber" | trans }}</th>
               <th data-sortable="true">{{"debts.principalAmount" | trans }}</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{debt.idNumber}}</td>
               {% if null != debt.principalAmount %}
					   <td>{{debt.principalAmount }}&nbsp;â‚¬&nbsp;{{"messages.plusInterestAndSurcharge" | trans}}</td>
               {% else %}
                  <td>{{"messages.noDebt" | trans}}</td>
               {% endif %}
				</tr>
			</tbody>
			</table>
			{% else %}
				<div class="mt-2 p-2 border border-black text-center bg-light">{{"messages.results0" | trans }}</div>
			{% endif %}
		</div>
    </main>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('debtsFiles_list') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('debtsFiles_list') }}
{% endblock %}