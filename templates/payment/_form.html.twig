<div class="card w-100">
  <div class="card-body p-0">
	{{ form_start(form, {'attr': {'class': 'container-fluid p-2',
						 'novalidate': 'novalidate'
						} 
				       }) }}
	{{ form_errors(form) }}
	<div class="form-row mb-2">
	    {% if search %}
		<div class="form-group col-lg-2">
		    <div class="input-group mb-2">
                {{ form_label(form.date_from) }}
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                    {{ form_widget(form.date_from, { 'attr': { 'class' : 'form-control form-control-sm' } }) }}
                    {{ form_errors(form.date_from) }}
                </div>
		    </div>
		</div>
		<div class="form-group col-lg-2">
		    <div class="input-group mb-2">
                {{ form_label(form.date_to) }}
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                    {{ form_widget(form.date_to, { 'attr': { 'class' : 'form-control form-control-sm' } }) }}
                    {{ form_errors(form.date_to) }}
                </div>
		    </div>
		</div>
	    {% else %}
		<div class="form-group col-lg-2">
		    <div class="w-100">{{ form_label(form.timestamp) }}</div>
		    <div class="input-group mb-2">
			<div class="input-group-prepend">
			    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
			    {{ form_widget(form.timestamp, { 'attr': { 'class' : 'form-control form-control-sm col' } }) }}
			    {{ form_errors(form.timestamp) }}
			</div>
		    </div>
		</div>
	    {% endif %}
	    <div class="form-group col-lg-2">
		{{ form_label(form.referenceNumber) }}
		{{ form_widget(form.referenceNumber, { 'attr': { 'class' : 'form-control form-control-sm col' } }) }}
		{{ form_errors(form.referenceNumber) }}
	    </div>
	    <div class="form-group col-lg-1">
		{{ form_label(form.suffix) }}
		{{ form_widget(form.suffix, { 'attr': { 'class' : 'form-control form-control-sm col' } }) }}
		{{ form_errors(form.suffix) }}
	    </div>
	    <div class="form-group col-lg-1">
		{{ form_label(form.status) }}
		{{ form_widget(form.status, { 'attr': { 'class' : 'form-control form-control-sm col' } }) }}
		{{ form_errors(form.status) }}
	    </div>
	    {% if not search %}
		<div class="form-group col">
		    {{ form_label(form.statusMessage) }}
		    {{ form_widget(form.statusMessage, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		    {{ form_errors(form.statusMessage) }}
		</div>
	    {% endif %}
	</div>
	<div class="form-row  mb-2 d-flex align-content-lg-start">
	    <div class="form-group col-lg-2">
		{{ form_label(form.nif) }}
		{{ form_widget(form.nif, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		{{ form_errors(form.nif) }}
	    </div>
	    <div class="form-group col-lg-2">
		{{ form_label(form.email) }}
		{{ form_widget(form.email, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		{{ form_errors(form.email) }}
	    </div>
	    {% if not search %}
		<div class="form-group col-lg-2">
		    {{ form_label(form.name) }}
		    {{ form_widget(form.name, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		    {{ form_errors(form.name) }}
		</div>
		<div class="form-group col-lg-2">
		    {{ form_label(form.surname1) }}
		    {{ form_widget(form.surname1, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		    {{ form_errors(form.surname1) }}
		</div>
		<div class="form-group col-lg-2">
		    {{ form_label(form.surname2) }}
		    {{ form_widget(form.surname2, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		    {{ form_errors(form.surname2) }}
		</div>
		<div class="form-group col-lg-2">
		    {{ form_label(form.phone) }}
		    {{ form_widget(form.phone, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		    {{ form_errors(form.phone) }}
		</div>
    </div>
    <div class="form-row mb-2 d-flex align-content-lg-start">
	    <div class="form-group col-lg-3">
		{{ form_label(form.registeredPaymentId) }}
		{{ form_widget(form.registeredPaymentId, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		{{ form_errors(form.registeredPaymentId) }}
	    </div>
		<div class="form-group col-lg-2">
		    {{ form_label(form.operationNumber) }}
		    {{ form_widget(form.operationNumber, { 'attr': { 'id': '', 'class' : 'form-control form-control-sm col' } }) }}
		    {{ form_errors(form.operationNumber) }}
		</div>
	{% endif %}
	</div>
	<div class="form-row mb-2">
	    {% if search %}
		<div class="form-group">
		    {{ form_widget(form.search, { 'attr': { 'id': '', 'class' : 'btn btn-primary' } }) }}
		</div>
	    {% else %}
		<div class="form-group">
		    {{ form_widget(form.back, { 'attr': { 'class' : 'btn btn-primary', 'data-url': path('admin_list_payments') } }) }}
		</div>
	    {% endif %}
	</div>
	{{ form_end(form, {'render_rest': true}) }}
  </div>
</div>