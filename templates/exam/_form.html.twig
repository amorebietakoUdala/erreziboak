            <label>{{ "label.quantity" | trans }}</label>
            <span class="js-quantity form-control form-control-sm col"></span>
        </div>
    </div>
    <div class="form-row align-items-center mb-1">
	{% if readonly == false %}
	    {{ form_widget(form.pay, { 'attr': { 'class' : 'btn btn-primary ml-1' } }) }}
	{% endif %}
	{% set url = path('receipt_find') %}
	{{ form_widget(form.back, { 'attr': { 'class' : 'js-back btn btn-primary ml-1' ,
					     'data-url' : url },
				  }) }}
